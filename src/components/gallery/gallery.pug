mixin gallery__item(image, filter = null)
    .gallery__item-wrap(class= attributes.class, data-filter= filter)
        img.gallery__item(src= image)

mixin gallery(items, filter = null)
    if filter
        +filter(filter, "Все", true)(itemClass= "button tab").gallery__filter.tab-list.mobile-scrollable
            each filterItem in filter
                +filter-trigger(filterItem.name, filterItem.id).button.tab

        .gallery__inner.mobile-scrollable
            each item in items
                +gallery__item(item.src, item.filterId).js-filter-target
    else 
        .gallery__inner.mobile-scrollable
            each item in items
                +gallery__item(item.src)


