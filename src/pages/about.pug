    - const title  = "Общая информация"
    - 
        const advantages = [
            'Компьютерный томограф Siemens Emotion',
            'Магнитно-резонансный томограф Siemens Magnetom Essenza',
            'Ультразвуковая система Siemens Acuson x300',
            'Цифровой рентгенный аппарат Siemens Mobilett XP Digital'
        ]
    - const gallery = [{src: "assets/img/doctor_demo.jpg", filterId: "0"},{src: "assets/img/lady.jpg", filterId: "1"},{src: "assets/img/doctor_demo.jpg", filterId: "0"},{src: "assets/img/doctor_demo.jpg", filterId: "0"},{src: "assets/img/lady.jpg", filterId: "1"},{src: "assets/img/lady.jpg", filterId: "1"}]
    - const filter = [{id: "0", name: "Врач"},{id:"1", name:"Море"}]
